@model BolsaTrabajo.Models.UsuarioViewModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    <div class="row container mt-4">
        <div class="col-md-8">
            <h1>Iniciar sesión</h1>
            <section id="loginForm">
                <h4>Use su correo institucional para iniciar sesión</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Iniciar" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrar como nuevo usuario", "Register")
                </p>

            </section>
        </div>
        <div class="col-md-4 mt-4">
            <br />
            <h4>Bolsa de trabajo - ITCJ </h4>
            <hr/>
            <p>Buscas mejorar tu situación laboral, obtener un mejor empleo o apenas comienzas tu carrera profesional, 
            acércate a los servicios de Bolsa de Trabajo y conoce de qué manera podemos apoyarte.</p>

        </div>

    </div>
}

    <script src="~/Scripts/EliminarOpcines.js" async defer></script>