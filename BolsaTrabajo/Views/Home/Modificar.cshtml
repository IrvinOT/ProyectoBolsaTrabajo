@model BolsaTrabajo.Models.CarrerasViewModel
@using (Html.BeginForm())
{
    <div class="container mt-4">
        <div class="row">
            <h2 class="col-md-12 row">Modificar vacante</h2>
            < <div class="form-group col-md-12">
                <label>Titulo de vacante:</label>
                @Html.TextBoxFor(m => m.publicacion.Vacante, new { @class = "form-control" })

            </div>
            <div class="form-group col-md-12">
                <label>Descripción:</label>
                @Html.TextAreaFor(m => m.publicacion.Descripcion, new { @class = "form-control col-md-8" })

            </div>
            <div class="form-group col-md-12">
                <label>Requisitos:</label>
                @Html.TextAreaFor(m => m.publicacion.Requisitos, new { @class = "form-control col-md-8" })

            </div>
            <div class="form-group col-md-12">
                <label>Carreras:</label>
                @Html.TextAreaFor(m => m.publicacion.Carreras, new { @Id = "txtCarreras", @Class = "form-control mb-2 col-md-8", @readonly = "readonly" })
                <div class="form-group col-md-12 row">
                    <div class="nav">
                        @Html.DropDownList("Carres", Model.ListaCarreras, new { @Id = "listCarreras", @Class = "form-control form-control-sm ml-2" })
                    </div>
                    <a class="btn btn-sm btn-primary ml-2" id="btnAgregar"><i class="fas fa-plus icono"></i></a>
                    <a class="btn btn-sm btn-danger ml-2" id="btnEliminar"><i class="fas fa-minus icono"></i></a>
                </div>
            </div>

                <div class="form-group ">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Registrar" />
                    </div>
                </div>
            </div>

        </div>
}

<script src="~/Scripts/Publicacion.js" async defer></script>